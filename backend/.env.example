# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Neon Database Configuration
NEON_HOST=your-neon-host.neon.tech
NEON_DATABASE=neondb
NEON_USERNAME=neondb_owner
NEON_PASSWORD=your-password
NEON_PORT=5432

# Or use a connection string
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Redis Configuration (Optional - for caching and performance)
# If not provided, app will run without caching
REDIS_URL=redis://localhost:6379
# For Redis Cloud or managed Redis:
# REDIS_URL=redis://username:password@host:port

# AI Services
GEMINI_API_KEY=your-gemini-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Search Services
SERPER_API_KEY=your-serper-api-key

# Audio Services (Optional)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
MURF_API_KEY=your-murf-api-key

# Payment Services (Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
PAYPAL_SANDBOX_MODE=true

STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_TEST_MODE=true

# Bunny.net CDN (Optional - for media storage)
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_STORAGE_API_KEY=your-storage-api-key
BUNNY_CDN_HOSTNAME=your-zone.b-cdn.net
BUNNY_STORAGE_HOSTNAME=storage.bunnycdn.com

# Sports Data API (Optional - for live scores)
SPORTRADAR_API_KEY=your-sportradar-api-key

# Google Calendar OAuth (Optional - for calendar tools)
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=https://backend.taskiumnetwork.com/api/gitu/calendar/callback

# WhatsApp Configuration (Optional - for WhatsApp bot)
# WARNING: Setting AUTO_REPLY_ALL=true will make the bot reply to EVERYONE
# This can spam contacts, consume API credits, and violate WhatsApp ToS
# Recommended: Use /gitu allow commands instead for specific contacts
GITU_WHATSAPP_AUTO_REPLY_ALL=false
GITU_WHATSAPP_AUTH_DIR=.gitu/credentials/whatsapp
GITU_WHATSAPP_CONTACTS_STORE_PATH=.gitu/credentials/whatsapp/contacts-store.json
GITU_WHATSAPP_SEND_WELCOME_TO_SELF=true
GITU_WHATSAPP_SYNC_FULL_HISTORY=false

# Telegram Configuration (Optional - for Telegram bot)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
